@model List<S2_L5_PW.Models.Product>

<h1 class="text-center my-4">I nostri prodotti</h1>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <img src="@product.CoverImage" class="card-img-top" alt="@product.Name" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">€@product.Price</p>
                        <a href="/Product/Details/@product.Id" class="btn btn-primary">Dettagli</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

