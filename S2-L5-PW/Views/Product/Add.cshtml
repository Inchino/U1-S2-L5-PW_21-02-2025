@model S2_L5_PW.Models.Product

<h1 class="text-center my-4">Aggiungi un prodotto</h1>

<div class="container">
    <form asp-action="Add" method="post" enctype="multipart/form-data" class="bg-white p-4 rounded shadow-sm">
        <div class="mb-3">
            <label class="form-label">Nome dell'articolo</label>
            <input type="text" class="form-control" asp-for="Name" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Prezzo</label>
            <input type="number" class="form-control" asp-for="Price" step="0.01" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Descrizione</label>
            <textarea class="form-control" asp-for="Description" rows="4" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Immagine di copertina</label>
            <input type="text" class="form-control" asp-for="CoverImage" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Immagine aggiuntiva 1</label>
            <input type="text" class="form-control" asp-for="AdditionalImage1" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Immagine aggiuntiva 2</label>
            <input type="text" class="form-control" asp-for="AdditionalImage2" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="reset" class="btn btn-danger">Reset</button>
            <button type="submit" class="btn btn-success">Salva</button>
        </div>
    </form>
</div>

