@model S2_L5_PW.Models.Product

<h1 class="text-center my-4">Dettagli del prodotto</h1>

<div class="container">
    <div class="card">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Model.CoverImage" class="card-img" alt="@Model.Name" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p class="card-text"><strong>Prezzo:</strong> €@Model.Price</p>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h4>Altre immagini:</h4>
        <div class="d-flex flex-row">
            <img src="@Model.AdditionalImage1" class="img-thumbnail mx-2" alt="Immagine aggiuntiva 1" width="150" />
            <img src="@Model.AdditionalImage2" class="img-thumbnail mx-2" alt="Immagine aggiuntiva 2" width="150" />
        </div>
    </div>

    <div class="mt-4 d-flex">
        <a href="/Product/Edit/@Model.Id" class="btn btn-warning me-2">Modifica</a>
        <form asp-action="Delete" method="post" asp-route-id="@Model.Id" onsubmit="return confirm('Sei sicuro di voler eliminare questo prodotto?');">
            <button type="submit" class="btn btn-danger me-2">Elimina</button>
        </form>
        <a href="/" class="btn btn-primary me-2">Torna alla Home</a>
    </div>
</div>
